<div class="row-fluid">
  <div class="span8 offset2">
    <div class="hero-unit">
      <h3>Sign up</h3>
      <% if @password_error %>
          <% password_error = "visible"  %>
      <% else  %>
          <% password_error = "hidden"  %>
      <% end %>
      <% if @incomplete_form_error %>
          <% incomplete_form_error = "visible"  %>
      <% else  %>
          <% incomplete_form_error = "hidden"  %>
      <% end %>
      <span class="label label-important" style="visibility:<%= incomplete_form_error %>">Complete all fields</span>
      <%= form_for(:user, :class => 'form-horizontal', :url =>{:action => 'sign_up'}) do |t| %>
          <div class="control-group">
            <label class="control-label" for="firstname">First Name</label>
            <div class="controls">
              <%= t.text_field(:first_name, :class => "input-medium") %>
            </div>
            <label class="control-label" for="lastname">Last Name</label>
            <div class="controls">
              <%= t.text_field(:last_name, :class => "input-medium") %>
            </div>

            <label class="control-label" for="inputEmail">Email</label>
            <div class="controls">
              <%= t.text_field(:email, :class => "input-medium") %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="inputPassword">Password</label>
            <div class="controls">
              <%= t.password_field(:password, :class => "input-medium") %>
              <span class="label label-important" style="visibility:<%= password_error %>">Passwords dont match</span>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="verifyPassword">Verify Password</label>
            <div class="controls">
              <%= t.password_field(:verify_password, :class => "input-medium") %>
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <%= submit_tag("Create Account", :class => "btn btn-primary") %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
