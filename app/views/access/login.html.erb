<div class="row-fluid">
  <div class="span8 offset2">
    <div class="hero-unit">
      First time?<div class="btn"><%= link_to 'Create Account',:action => 'sign_up'  %></div>
      <h3>Sign in</h3>
      <% if @problem %>
          <% error = 'visible'  %>
      <% else  %>
          <% error = 'hidden'  %>
      <% end %>
      <span class="label label-important" style="visibility:<%= error %>"><strong>Oh shit!</strong> Wrong info bro!</span>

      <%= form_for(:signin, :class => 'form-horizontal', :url =>{:action => 'attempt_login'}) do |t| %>
          <div class="control-group">
            <label class="control-label" for="inputEmail">Email</label>
            <div class="controls">
              <%= t.text_field(:email, :class => "input-medium") %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="inputPassword">Password</label>
            <div class="controls">
              <%= t.password_field(:password, :class => "input-medium") %>
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <%= submit_tag("Sign in", :class => "btn btn-primary") %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
